{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "baseUrl": ".",
  "paths": [
    {
      "@/*": ["src/*"]
    }
  ]
}
